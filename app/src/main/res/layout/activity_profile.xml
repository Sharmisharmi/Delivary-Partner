<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">





    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="220dp"
        android:background="@drawable/bottom_radius"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingHorizontal="15dp"
            android:layout_marginBottom="5dp"
            android:paddingVertical="10dp">

            <ImageView
                android:id="@+id/backpressImage"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/arrow_back"
                android:layout_gravity="center_vertical"/>


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Profile"
                android:fontFamily="@font/poppins_medium"
                android:textColor="@color/black"
                android:textSize="18dp"
                android:layout_marginTop="2dp"
                android:layout_gravity="center"
                android:gravity="center"/>
        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/editProfileTXT"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/rounded_corner"
                android:text="Edit Profile"
                android:layout_alignParentEnd="true"
                android:layout_marginRight="25dp"
                android:fontFamily="@font/poppins_semibold"
                android:paddingHorizontal="5dp"
                android:textSize="12dp"
                android:paddingVertical="2dp"
                android:textColor="@color/violet"/>

        <de.hdodenhof.circleimageview.CircleImageView
            android:layout_width="95dp"
            android:layout_height="85dp"
            android:src="@drawable/profile"
            android:layout_gravity="center"
            android:layout_centerInParent="true"/>


        </RelativeLayout>



    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_gravity="center"
        android:gravity="center"
        android:layout_marginTop="20dp">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Sharmila Mary"
        android:fontFamily="@font/poppins_semibold"
        android:textSize="17dp"
        android:textColor="@color/black" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:layout_marginTop="-3dp">

        <ImageView
            android:layout_width="14dp"
            android:layout_height="14dp"
            android:src="@drawable/phone_call"
            android:scaleType="fitXY"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="9361414765"
            android:fontFamily="@font/poppins_regular"
            android:textColor="@color/black"
            android:textSize="13dp"
            android:layout_marginTop="2dp"
            android:layout_marginLeft="5dp"/>


    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center_vertical">

        <ImageView
            android:layout_width="12dp"
            android:layout_height="13dp"
            android:src="@drawable/location_24"
            android:scaleType="fitXY"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Bangalore"
            android:fontFamily="@font/poppins_regular"
            android:textColor="@color/black"
            android:textSize="11dp"
            android:layout_marginTop="2dp"
            android:layout_marginLeft="5dp"/>


    </LinearLayout>

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="40dp"
        android:layout_marginHorizontal="15dp"
        android:weightSum="2">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_weight="1"
            android:layout_gravity="center"
            android:gravity="center">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="4.5"
                android:textSize="20dp"
                android:fontFamily="@font/poppins_medium"
                android:textColor="#FF5722" />

                <ImageView
                    android:layout_width="18dp"
                    android:layout_height="18dp"
                    android:src="@drawable/star_24"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="3dp"
                    android:tint="#FF5722"
                    android:layout_marginBottom="4dp"/>

            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Ratings"
                android:textSize="13dp"
                android:textColor="@color/black"
                android:fontFamily="@font/poppins_medium"/>
        </LinearLayout>

        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="@drawable/gradient_theme_bg"/>

                 <LinearLayout
                     android:id="@+id/earningsLL"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_weight="1"
                    android:layout_gravity="center"
                    android:gravity="center">


                     <LinearLayout
                         android:layout_width="wrap_content"
                         android:layout_height="wrap_content">


                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="\u20b9 2000"
                            android:textSize="20dp"
                            android:fontFamily="@font/poppins_medium"
                            android:textColor="@color/violet"/>

                         <ImageView
                             android:layout_width="20dp"
                             android:layout_height="20dp"
                             android:src="@drawable/bank_acc"
                             android:layout_gravity="center_vertical"
                             android:layout_marginLeft="3dp"
                             android:layout_marginBottom="4dp"/>

                     </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Earnings"
                android:textSize="13dp"
                android:textColor="@color/black"
                android:fontFamily="@font/poppins_medium"/>
        </LinearLayout>




    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginHorizontal="15dp"
        android:layout_marginTop="40dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Vehicle Details"
            android:fontFamily="@font/poppins_medium"
            android:textColor="@color/black"
            android:textSize="15dp"/>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp">

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/border_radius_black">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/rounded_corner"
                    android:backgroundTint="@color/blue"
                    android:layout_marginTop="1dp"
                    android:visibility="gone">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="2"
                        android:textSize="12dp"
                        android:paddingHorizontal="6dp"
                        android:textColor="@color/white"
                        android:fontFamily="@font/poppins_medium"/>
                </LinearLayout>

                <ImageView
                    android:layout_width="65dp"
                    android:layout_height="55dp"
                    android:src="@drawable/map_marker"
                    android:padding="10dp"/>
            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginLeft="15dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Vehicle No :"
                    android:fontFamily="@font/poppins_medium"
                    android:textColor="#434343"
                    android:textSize="12dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="12 TN 7623"
                    android:fontFamily="@font/poppins_semibold"
                    android:textColor="@color/black"
                    android:layout_marginLeft="10dp"/>

                </LinearLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Splender"
                    android:fontFamily="@font/poppins_medium"
                    android:textColor="@color/black"
                    android:layout_marginTop="8dp"/>
            </LinearLayout>
        </LinearLayout>

    </LinearLayout>

</LinearLayout>