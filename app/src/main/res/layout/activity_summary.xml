<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginHorizontal="15dp"
        android:layout_marginTop="35dp">


    <com.github.chengang.library.TickView
        android:id="@+id/tick_view_accent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:check_base_color="@color/violet"
        app:check_tick_color="@color/white"
        app:uncheck_base_color="@color/violet"
        app:rate="fast" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Completed"
            android:fontFamily="@font/poppins_semibold"
            android:textColor="@color/violet"
            android:textSize="18dp"/>

        <TextView
            android:id="@+id/walletDescTxt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Delivery Charge \u20b9 35.00 added to your wallet"
            android:fontFamily="@font/poppins_medium"
            android:layout_marginTop="15dp"
            android:textSize="13dp"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.6dp"
            android:background="@color/lite_grey"
            android:layout_marginVertical="25dp"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Delivery No: "
                android:layout_gravity="bottom"
                android:gravity="bottom"
                android:textColor="@color/black"
                android:fontFamily="@font/poppins_semibold"
                android:layout_marginTop="-4dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/bottom_left"
                android:text="4"
                android:layout_gravity="center"
                android:gravity="center"
                android:textColor="@color/white"
                android:fontFamily="@font/poppins_semibold"/>
        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Amount Details"
            android:fontFamily="@font/poppins_semibold"
            android:textColor="@color/violet"
            android:textSize="18dp"
            android:layout_marginTop="25dp"/>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="2"
            android:layout_marginTop="10dp">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Distance"
                android:fontFamily="@font/poppins_medium"
                android:textSize="13dp"/>

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="5 k/m"
                android:fontFamily="@font/poppins_medium"
                android:textSize="13dp"
                android:gravity="end"
                android:textColor="@color/black"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="2"
            android:layout_marginTop="10dp">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Delivery Charge"
                android:fontFamily="@font/poppins_medium"
                android:textSize="13dp"/>

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="5  x  15.00"
                android:fontFamily="@font/poppins_medium"
                android:textSize="13dp"
                android:gravity="end"
                android:textColor="@color/black"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="2"
            android:layout_marginTop="10dp">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Petrol Charge"
                android:fontFamily="@font/poppins_medium"
                android:textSize="13dp"/>

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="5  x  2.00"
                android:fontFamily="@font/poppins_medium"
                android:textSize="13dp"
                android:gravity="end"
                android:textColor="@color/black"/>
        </LinearLayout>


        <View
            android:layout_width="match_parent"
            android:layout_height="0.6dp"
            android:background="@color/lite_grey"
            android:layout_marginVertical="15dp"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="2"
          >

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Total Amount"
                android:fontFamily="@font/poppins_medium"
                android:textSize="13dp"
                android:textColor="@color/black"/>

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="\u20b9 60.00"
                android:fontFamily="@font/poppins_semibold"
                android:textSize="18dp"
                android:gravity="end"
                android:textColor="@color/black"/>
        </LinearLayout>


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="You can check in your wallet, wether amount is added or not."
            android:fontFamily="@font/poppins_medium"
            android:layout_marginTop="35dp"
            android:textSize="12dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:background="@drawable/rounded_corner"
            android:backgroundTint="@color/light_yellow"
            android:paddingVertical="5dp"
            android:paddingHorizontal="5dp">

            <ImageView
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:src="@drawable/info_24"
                android:layout_marginTop="2dp"
                android:tint="#FF5722"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="You have to complete minimun 10 tasks daily or else 10% of amount will be deduct. "
            android:fontFamily="@font/poppins_medium"
          android:layout_marginLeft="10dp"
            android:textSize="11dp"
            android:textColor="#FF5722"/>

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/walletLL"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="15dp"
        android:layout_marginBottom="15dp"
        android:background="@drawable/gradient_theme">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Go to Wallet"
        android:fontFamily="@font/poppins_medium"
        android:textSize="15dp"
        android:paddingHorizontal="10dp"
        android:paddingVertical="5dp"
        android:textColor="@color/white"/>

        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/double_arrow_right_24"
            android:layout_gravity="center_vertical"
            android:tint="@color/white"/>

    </LinearLayout>


</RelativeLayout>