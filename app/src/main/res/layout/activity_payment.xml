<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingHorizontal="15dp"
        android:layout_marginBottom="5dp"
        android:paddingVertical="10dp">

        <ImageView
            android:id="@+id/backpressImage"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/arrow_back"
            android:layout_gravity="center_vertical"/>


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Collect Cash"
            android:fontFamily="@font/poppins_medium"
            android:textColor="@color/black"
            android:textSize="18dp"
            android:layout_marginTop="2dp"
            android:layout_gravity="center"
            android:gravity="center"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginHorizontal="15dp"
        android:layout_marginTop="25dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="2"
            android:background="@drawable/gradient_theme">

            <TextView
                android:id="@+id/onlineTXT"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Online"
                android:fontFamily="@font/poppins_medium"
                android:textColor="@color/violet"
                android:layout_gravity="center"
                android:gravity="center"
                android:paddingVertical="5dp"
                android:layout_marginVertical="4dp"
                android:layout_marginHorizontal="5dp"
                android:background="@drawable/rounded_corner"/>
            <TextView
                android:id="@+id/offlineTXT"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Offline"
                android:fontFamily="@font/poppins_medium"
                android:textColor="@color/white"
                android:layout_gravity="center"
                android:gravity="center"
                android:paddingVertical="5dp"
                android:layout_marginVertical="4dp"
                android:layout_marginHorizontal="5dp" />


        </LinearLayout>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scrollbars="none">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


        <LinearLayout
            android:id="@+id/onlineLL"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="15dp"
            android:visibility="visible">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Scan to pay"
                android:fontFamily="@font/poppins_medium"
                android:layout_marginTop="15dp"
                android:textSize="15dp"
                android:textColor="@color/black"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Scan QR Code and complete payment process"
                android:fontFamily="@font/poppins_regular"
                android:layout_marginTop="5dp"
                android:textSize="12dp"
                android:textColor="#333333"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Total Amount"
                android:fontFamily="@font/poppins_medium"
                android:textColor="#2B2A2A"
                android:textSize="18dp"
                android:layout_gravity="center"
                android:layout_marginTop="30dp"/>
            <TextView
                android:id="@+id/totalAmount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="\u20b9 200"
                android:fontFamily="@font/poppins_semibold"
                android:textColor="@color/violet"
                android:textSize="22dp"
                android:layout_gravity="center"/>


            <ImageView
                android:id="@+id/iv_qr_code"
                android:scaleType="fitCenter"
                android:layout_width="200dp"
                android:layout_height="200dp"
                android:layout_gravity="center"
                android:layout_marginTop="35dp"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/offlineLL"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="15dp"
            android:visibility="gone">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Pay Cash"
                android:fontFamily="@font/poppins_medium"
                android:layout_marginTop="15dp"
                android:textSize="15dp"
                android:textColor="@color/black"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Collect amount by cash and complete payment process"
                android:fontFamily="@font/poppins_regular"
                android:layout_marginTop="5dp"
                android:textSize="12dp"
                android:textColor="#333333"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Total Amount"
                android:fontFamily="@font/poppins_medium"
                android:textColor="#2B2A2A"
                android:textSize="18dp"
                android:layout_gravity="center"
                android:layout_marginTop="30dp"/>
            <TextView
                android:id="@+id/totalAmount1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="\u20b9 200"
                android:fontFamily="@font/poppins_semibold"
                android:textColor="@color/violet"
                android:textSize="22dp"
                android:layout_gravity="center"/>


            <TextView
                android:id="@+id/doneTxt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Done"
                android:fontFamily="@font/poppins_semibold"
                android:layout_gravity="center"
                android:background="@drawable/full_round_corner"
                android:textColor="@color/violet"
                android:paddingHorizontal="15dp"
                android:paddingVertical="5dp"
                android:textSize="14dp"
                android:layout_marginTop="35dp"/>
        </LinearLayout>

        </LinearLayout>

        </ScrollView>


    </LinearLayout>


</LinearLayout>