<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:id="@+id/newOrdersCard"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="8dp"
        app:cardUseCompatPadding="true"
        android:layout_marginHorizontal="5dp"
        android:layout_marginVertical="5dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingHorizontal="15dp"
                android:paddingVertical="10dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/orderId_TXT"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="#75647"
                        android:fontFamily="@font/poppins_semibold"
                        android:textSize="12dp"
                        android:textColor="@color/hard_blue"/>

                    <LinearLayout
                        android:id="@+id/completedLL"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_alignParentEnd="true"
                        android:background="@drawable/rounded_corner"
                        android:backgroundTint="@color/light_green"
                        android:visibility="visible">


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Completed  "
                        android:fontFamily="@font/poppins_semibold"
                        android:textColor="#4CAF50"
                        android:textSize="10dp"
                        android:gravity="center_vertical"
                        android:paddingLeft="7dp"
                        android:paddingVertical="1dp"/>

                        <ImageView
                            android:layout_width="18dp"
                            android:layout_height="14dp"
                            android:src="@drawable/radio_button_checked_24"
                            android:layout_gravity="center_vertical"
                            android:layout_marginRight="5dp"
                            android:tint="#4CAF50"/>

                    </LinearLayout>
                    <LinearLayout
                        android:id="@+id/pendingLL"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_alignParentEnd="true"
                        android:background="@drawable/rounded_corner"
                        android:backgroundTint="@color/light_red"
                        android:visibility="gone">


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Pending  "
                        android:fontFamily="@font/poppins_semibold"
                        android:textColor="@color/red"
                        android:textSize="10dp"
                        android:gravity="center_vertical"
                        android:paddingLeft="7dp"
                        android:paddingVertical="1dp"/>

                        <ImageView
                            android:layout_width="18dp"
                            android:layout_height="14dp"
                            android:src="@drawable/radio_button_checked_24"
                            android:layout_gravity="center_vertical"
                            android:layout_marginRight="5dp"
                            android:tint="@color/red"/>

                    </LinearLayout>
                    <LinearLayout
                        android:id="@+id/mapLL"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_alignParentEnd="true"
                        android:background="@drawable/rounded_corner"
                        android:backgroundTint="@color/light_yellow"
                        android:visibility="gone">


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Navigate  "
                        android:fontFamily="@font/poppins_semibold"
                        android:textColor="#FF9800"
                        android:textSize="10dp"
                        android:gravity="center_vertical"
                        android:drawableTint="@color/light_green"
                        android:paddingLeft="7dp"
                        android:paddingVertical="1dp"/>

                        <ImageView
                            android:layout_width="18dp"
                            android:layout_height="14dp"
                            android:src="@drawable/map_navigation_icon"
                            android:layout_gravity="center_vertical"
                            android:layout_marginRight="5dp"
                            android:tint="#FF9800"/>

                    </LinearLayout>
                </RelativeLayout>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">


                        <ImageView
                            android:layout_width="10dp"
                            android:layout_height="10dp"
                            android:src="@drawable/pin"
                            android:layout_gravity="center"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Pickup"
                            android:textSize="10dp"
                            android:fontFamily="@font/poppins_regular"/>
                    </LinearLayout>
                    <TextView
                        android:id="@+id/pickUpAdress_TXT"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="PRM Towers, 2nd floor, old madras road, Indira Nagar, Bangalore, Karnataka"
                        android:textSize="10dp"
                        android:fontFamily="@font/poppins_regular"
                        android:layout_marginLeft="15dp"/>
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="5dp"
                    android:background="@drawable/stroke_line"
                    android:layout_marginTop="15dp"/>


                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">


                        <ImageView
                            android:layout_width="10dp"
                            android:layout_height="10dp"
                            android:src="@drawable/pin"
                            android:layout_gravity="center"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Drop"
                            android:textSize="10dp"
                            android:fontFamily="@font/poppins_regular"/>
                    </LinearLayout>
                    <TextView
                        android:id="@+id/dropAddress_TXT"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="PRM Towers, 2nd floor, old madras road, Indira Nagar, Bangalore, Karnataka"
                        android:textSize="10dp"
                        android:fontFamily="@font/poppins_regular"
                        android:layout_marginLeft="15dp"/>
                </LinearLayout>




            </LinearLayout>



            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingVertical="8dp"
                android:layout_marginTop="10dp"
                android:background="#DCF1FA">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Payment:"
                        android:fontFamily="@font/poppins_medium"
                        android:textSize="11dp"/>

                    <TextView
                        android:id="@+id/paymentStatus"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Not Paid"
                        android:fontFamily="@font/poppins_medium"
                        android:textSize="11dp"
                        android:layout_marginLeft="10dp"
                        android:textColor="@android:color/holo_red_dark"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="15dp"
                    android:layout_alignParentEnd="true">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Amount:"
                        android:fontFamily="@font/poppins_medium"
                        android:textSize="11dp"/>

                    <TextView
                        android:id="@+id/amountTXT"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="\u20b9 150.00"
                        android:fontFamily="@font/poppins_semibold"
                        android:textSize="14dp"
                        android:layout_marginLeft="10dp"
                        android:textColor="@color/violet"/>
                </LinearLayout>
            </RelativeLayout>

        </LinearLayout>


    </androidx.cardview.widget.CardView>

</LinearLayout>