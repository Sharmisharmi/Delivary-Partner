<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingHorizontal="15dp"
        android:layout_marginBottom="5dp"
        android:paddingVertical="10dp">

        <ImageView
            android:id="@+id/backpressImage"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/arrow_back"
            android:layout_gravity="center_vertical"
         />


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Bank Details"
            android:fontFamily="@font/poppins_medium"
            android:textColor="@color/black"
            android:textSize="18dp"
            android:layout_marginTop="2dp"
            android:layout_gravity="center"
            android:gravity="center"/>
    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginHorizontal="15dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="25dp">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Holder Name"
                        android:fontFamily="@font/poppins_semibold"
                        android:textColor="@color/black"
                        android:backgroundTint="#7CA5B4E8"
                        android:layout_marginLeft="8dp"
                        android:textSize="13dp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="*"
                        android:fontFamily="@font/poppins_semibold"
                        android:textColor="#F80303"
                        android:backgroundTint="#7CA5B4E8"
                        android:textSize="15dp"/>
                </LinearLayout>
                <EditText
                    android:id="@+id/nameEt"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:hint="Sharmila"
                    android:fontFamily="@font/poppins_medium"
                    android:textColor="@color/black"
                    android:background="@drawable/border_radius_black"
                    android:paddingVertical="8dp"
                    android:paddingHorizontal="10dp"
                    android:layout_marginHorizontal="8dp"
                    android:textSize="13dp" />

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="25dp">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Bank Name"
                        android:fontFamily="@font/poppins_semibold"
                        android:textColor="@color/black"
                        android:backgroundTint="#7CA5B4E8"
                        android:layout_marginLeft="8dp"
                        android:textSize="13dp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="*"
                        android:fontFamily="@font/poppins_semibold"
                        android:textColor="#F80303"
                        android:backgroundTint="#7CA5B4E8"
                        android:textSize="15dp"/>
                </LinearLayout>
                <EditText
                    android:id="@+id/bank_name_Et"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:hint="City Bank"
                    android:fontFamily="@font/poppins_medium"
                    android:textColor="@color/black"
                    android:background="@drawable/border_radius_black"
                    android:paddingVertical="8dp"
                    android:paddingHorizontal="10dp"
                    android:layout_marginHorizontal="8dp"
                    android:textSize="13dp" />

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="25dp">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Account Number"
                        android:fontFamily="@font/poppins_semibold"
                        android:textColor="@color/black"
                        android:backgroundTint="#7CA5B4E8"
                        android:layout_marginLeft="8dp"
                        android:textSize="13dp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="*"
                        android:fontFamily="@font/poppins_semibold"
                        android:textColor="#F80303"
                        android:backgroundTint="#7CA5B4E8"
                        android:textSize="15dp"/>
                </LinearLayout>
                <EditText
                    android:id="@+id/acc_no_Et"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:hint="3412334234"
                    android:fontFamily="@font/poppins_medium"
                    android:textColor="@color/black"
                    android:background="@drawable/border_radius_black"
                    android:paddingVertical="8dp"
                    android:paddingHorizontal="10dp"
                    android:layout_marginHorizontal="8dp"
                    android:textSize="13dp" />

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="25dp">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Mobile Number"
                        android:fontFamily="@font/poppins_semibold"
                        android:textColor="@color/black"
                        android:backgroundTint="#7CA5B4E8"
                        android:layout_marginLeft="8dp"
                        android:textSize="13dp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="*"
                        android:fontFamily="@font/poppins_semibold"
                        android:textColor="#F80303"
                        android:backgroundTint="#7CA5B4E8"
                        android:textSize="15dp"/>
                </LinearLayout>
                <EditText
                    android:id="@+id/mobile_no_Et"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:hint="684574523"
                    android:fontFamily="@font/poppins_medium"
                    android:textColor="@color/black"
                    android:background="@drawable/border_radius_black"
                    android:paddingVertical="8dp"
                    android:paddingHorizontal="10dp"
                    android:layout_marginHorizontal="8dp"
                    android:textSize="13dp"
                    android:inputType="phone"/>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:layout_width="13dp"
                        android:layout_height="14dp"
                        android:src="@drawable/info_24"
                        android:layout_gravity="center_vertical"
                        android:layout_marginTop="2dp"
                        android:layout_marginLeft="10dp"
                        android:tint="@color/red"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Provide proper mobile no. which is attached to your bank."
                        android:textSize="11dp"
                        android:fontFamily="@font/poppins_medium"
                        android:layout_marginLeft="5dp"
                        android:layout_marginTop="5dp"/>
                </LinearLayout>

            </LinearLayout>





        </LinearLayout>
    </ScrollView>

    </LinearLayout>



    <LinearLayout
        android:id="@+id/conitnue_ll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:foreground="?android:attr/selectableItemBackground"
        android:layout_alignParentBottom="true"
        android:background="@color/white"
        android:paddingBottom="15dp"
        android:paddingTop="5dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Save"
            android:fontFamily="@font/poppins_semibold"
            android:gravity="center"
            android:layout_gravity="center"
            android:textColor="@color/white"
            android:paddingVertical="6dp"
            android:textSize="18dp"
            android:background="@drawable/gradient_theme"
            android:layout_marginHorizontal="15dp"
            android:paddingHorizontal="10dp" />
    </LinearLayout>


</RelativeLayout>